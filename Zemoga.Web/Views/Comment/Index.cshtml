@model ICollection<Zemoga.Models.Comment>

@{
    ViewBag.Title = "View";
}

<h2>Comments</h2>

<p>
    @Html.ActionLink("Create Comment", "Create", new { postId = (long)ViewBag.CurrentPost }, null)
</p>
<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Text
        </th>
        <th>
            Author
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorEmail)
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Post")
</div>
